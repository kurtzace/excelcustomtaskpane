                                    <Button  Name="btnSimpleCodeBehind" Content="Code Behind" Margin="2" Click="btnSimpleCodeBehind_Click" />
                                </StackPanel>
                            </GroupBox>

                            <GroupBox Header="Customize Tree" Margin="2">
