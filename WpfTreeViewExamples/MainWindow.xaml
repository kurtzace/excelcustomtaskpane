                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <StackPanel>
                    <Label  Content="Option" FontWeight="Bold" Background="{DynamicResource TitleLabel}"></Label>
                    <Image Source="Images\Continent2.gif"></Image>
                </StackPanel>
