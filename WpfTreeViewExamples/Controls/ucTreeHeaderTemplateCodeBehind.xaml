<UserControl x:Class="WpfTreeViewExamples.Controls.ucTreeHeaderTemplateCodeBehind"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
               xmlns:loc="clr-namespace:WpfTreeViewExamples.Library"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Loaded="UserControl_Loaded">
   
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
        </Grid.RowDefinitions>
        <TreeView Name="tvMain">              
        </TreeView>
        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <Button Name="btnShow" Content="Show Select" Click="btnShow_Click"></Button>
        </StackPanel>
    </Grid>
</UserControl>
