<Application x:Class="WpfTreeViewExamples.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>


        <Style TargetType="{x:Type TreeView}">
            <Setter Property="BorderBrush" Value="#00000000"></Setter>
        </Style>
        <Style TargetType="{x:Type TreeViewItem}">
            <Setter Property="IsExpanded" Value="True"></Setter>            
        </Style>

        <LinearGradientBrush x:Key="TitleLabel" EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF80B9E7" Offset="1"/>
            <GradientStop Color="#FF7BB3E5" Offset="0.493"/>
            <GradientStop Color="#FF8FBDE7" Offset="0.467"/>
            <GradientStop Color="#FF84B5E2"/>
        </LinearGradientBrush>

    </Application.Resources>
</Application>
